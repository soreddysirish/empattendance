<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-md-12 col-sm-12">
      <div class="form-group col-md-6 col-sm-6">
       <%= f.label :firstName ,"First name"%>
       <%= f.text_field :firstName, autofocus: true,class:'form-control input-sm',placeholder: "Enter first name" %>
     </div>

     <div class="form-group col-md-6 col-sm-6">
       <%= f.label :lastName, "Last name" %>
       <%= f.text_field :lastName, autofocus: true,class:'form-control input-sm',placeholder: "Enter last name" %>
     </div>

     <div class="form-group col-md-6 col-sm-6">
       <%= f.label :gender %> <br />
       <%= f.radio_button :gender, 'male', :checked => true %>
       <%= f.label :gender_male, 'Male' %>
       <%= f.radio_button :gender, 'female' %>
       <%= f.label :gender_female, 'Female' %>
     </div>

     <div class="form-group col-md-6 col-sm-6">
      <%= f.label :empId, " Emp id" %>
      <%= f.text_field :empId, autofocus: true ,class:'form-control input-sm',placeholder: "Enter emp Id"%>
    </div> 

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :address %>
      <%= f.text_area :address, autofocus: true ,class:'form-control input-sm',placeholder: "Enter address"%>
    </div> 

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :designation %>
      <%= f.select :designation, options_for_select([["Select One", ""], "sr software engineer", "product engineer", "Office boy", "test engineer" ]),{},{class:'form-control input-sm'} %>
    </div> 

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :dob, "Date of birth" %>
      <%= f.text_field :dob, "data-provide" =>"datepicker",class:'form-control input-sm' %>
    </div> 

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :doj, "Date of joining" %>
      <%= f.text_field :doj, "data-provide" =>"datepicker",class:'form-control input-sm' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :mobileNumber, "Mobile number" %>
      <%= f.text_field :mobileNumber, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your mobile number' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :pfNumber, "Pf number" %>
      <%= f.text_field :pfNumber, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your Pf number' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :panNumber, "Pan number" %>
      <%= f.text_field :panNumber, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your Pan number' %>
    </div>


    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :bankName, "Bank name" %>
      <%= f.text_field :bankName, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your bank name' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :accountNumber, "Account number" %>
      <%= f.text_field :accountNumber, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your account number' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :accountType, "Account type" %>
      <%= f.text_field :accountType, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your account type' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :branch %>
      <%= f.text_field :branch, autofocus: true, class:'form-control input-sm', placeholder: 'Enter your branch' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :ifscCode, "Ifsc code"%>
      <%= f.text_field :ifscCode, autofocus: true, class:'form-control input-sm', placeholder: 'Enter ifsc code' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class:'form-control input-sm', placeholder: 'Enter email id' %>
    </div>

    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br /> 
      <%= f.password_field :password, autocomplete: "off", class:'form-control input-sm', placeholder: 'password' %>
    </div>
    <div class="form-group col-md-6 col-sm-6">
      <%= f.label :password_confirmation,"password confirmation" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control input-sm', placeholder: 'password confirmation' %>
    </div>


    <div class="form-group col-md-6 col-sm-6">
      <%= f.submit "update",class: 'btn btn-primary ' %>&nbsp
      <button type ="button"  class='btn btn-defalult'> clear </button>
    </div>
    <% end %>
</div>
</div>

